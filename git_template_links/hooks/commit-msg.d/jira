#!/usr/bin/env ruby
require 'shellwords'

if ENV['SKIP_JIRA'] || File.exist?(".git/MERGE_HEAD")
  exit 0
end

story=`git story`.strip

message = File.read(ARGV[0]).gsub(/\n*\z/, "\n")

if message.match(/\A(fixup|squash)!/)
  exit 0
end

if story.empty?
  summary = message.lines[0].strip.shellescape
  description = message.lines[2..-1]&.map{|l| '    ' + l }&.join&.strip&.shellescape

  args = ''
  args += %(-o description=#{description}) if description

  puts %x(
  git story "$( jira create -p ES -o summary=#{summary} #{args} --noedit | ruby -ane 'puts $F[1]')"
  )

  story = `git story`.strip
end

File.write(ARGV[0], "#{story} #{message}\nProject: #{story}\nPair: sushil.thapa@andros.co")
