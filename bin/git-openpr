#! /usr/bin/env bash

set -ep

if test -n "$(git pull-request-id)"; then
  echo "Branch already has a pull request"
  exit 1
fi

title="$(git log od..HEAD --reverse --format=%s | head -n1)"
body="$(git log od..HEAD --reverse --format='### %s%n%b')"

echo "$title"
echo "$body"

url="$(gh pr create \
  --title "$title" \
  --body "$body")"

echo $url
git pull-request-id "$(echo "$url" | sed 's/.*\///')"
##! /usr/bin/env fish
