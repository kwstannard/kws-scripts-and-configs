[core]
  editor = vim
  commentChar = ~
  hooksPath = ~/scripts/git_template_ruby/hooks
  autocrlf = true

[user]
  name = Kelly Stannard
  email = kwstannard@gmail.com

[fetch]
  prune = true

[apply]
  whitespace = fix

[init]
  templatedir=~/scripts/git_template_ruby

[push]
	default = current

[pull]
  rebase = true

[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold ul

[branch]
#  autosetupmerge = always
  autosetuprebase = always

[diff]
  color = true
  whitespace = red reverse

[alias]
  st = status
  co = checkout
  sw = "!git branch $1; git switch"
  fcbr = !(git remote | xargs git remote prune) && git branch --merged | grep -v develop | grep -v dev | xargs git branch -d
  cbr = !git branch --merged | grep -v master | xargs git branch -d

  l = log
  r = !git l -30
  ra = !git r --all
  la = !git l --all

  fu = commit -a --fixup
  fuh = commit -a --fixup HEAD
  sq = commit -a --squash
  sqh = commit -a --squash HEAD
  squash = "! git rebase -i --autosquash ${1:-master} #"

  authorstats = shortlog -sn
  praise = blame
  difw = diff --word-diff
  overview = log --all --oneline --no-merges --since='2 weeks' -15
  pl = pull --log
  graph = log --graph --all --decorate --stat --date=iso
  cf = !git status --porcelain ./ | grep UU | sed 's/UU //'
  note = notes append -m

	conflicted = !nvim +Conflicted

[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX

[notes]
	rewriteRef = refs/notes/*

[notes "rewrite"]
  squash = true
  amend = true
